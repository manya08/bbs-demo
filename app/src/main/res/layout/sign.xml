<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="30dp"
        >
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="手机号"
            android:textColor="#969696"
            android:background="@drawable/edt_shape"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/phone_number_tip"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/phone_number"
            android:text="手机号已被注册"
            android:textColor="#FF0000"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textColor="#969696"
            android:layout_below="@+id/phone_number_tip"
            android:background="@drawable/edt_shape"
            android:layout_margin="10dp"
            android:hint="密码6-18位字母数字组合"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/password_again"
            android:layout_width="270dp"
            android:layout_height="50dp"

            android:textColor="#969696"
            android:layout_below="@+id/password"
            android:background="@drawable/edt_shape"
            android:layout_margin="10dp"

            android:hint="重新输入密码"
            android:inputType="textPassword"

            />

        <TextView
            android:id="@+id/password_tip"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/password_again"
            android:text="新密码重复输入错误"
            android:textColor="#FF0000"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/verify_code"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:hint="验证码"
            android:layout_below="@+id/password_tip"
            android:background="@drawable/edt_shape"
            android:layout_margin="10dp"
            android:textColor="#969696"
            />
        <Button
            android:id="@+id/get_verify_code"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="获取"
            android:layout_alignRight="@+id/password_again"
            android:layout_below="@+id/password_tip"
            android:layout_margin="15dp"
            android:gravity="center"
            android:background="@drawable/btn_shape"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/ensure"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="确定"
            android:background="@drawable/btn_shape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/back"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="返回"
            android:layout_below="@+id/ensure"
            android:background="@drawable/btn_shape"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
</LinearLayout>